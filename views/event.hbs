<div class="form-container" style="max-width: 600px; margin: auto; padding: 1rem; background: #fff; border-radius: 5px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
  <h2>Create Event</h2>
  <form action="/events/create" method="POST">
    <div class="form-group" style="margin-bottom: 1rem;">
      <label for="title" style="display: block; margin-bottom: .5rem;">Event Title:</label>
      <input type="text" name="title" required style="width: 100%; padding: .5rem; border: 1px solid #ddd; border-radius: 3px;" />
    </div>
    <div class="form-group" style="margin-bottom: 1rem;">
      <label for="description" style="display: block; margin-bottom: .5rem;">Description:</label>
      <textarea name="description" required style="width: 100%; padding: .5rem; border: 1px solid #ddd; border-radius: 3px;"></textarea>
    </div>
    <div class="form-group" style="margin-bottom: 1rem;">
      <label for="date" style="display: block; margin-bottom: .5rem;">Event Date:</label>
      <input type="date" name="date" required style="width: 100%; padding: .5rem; border: 1px solid #ddd; border-radius: 3px;" />
    </div>
    <button type="submit" style="background-color: #007bff; color: #fff; border: none; padding: .75rem 1.5rem; border-radius: 3px; cursor: pointer;">Create Event</button>
  </form>
</div>
